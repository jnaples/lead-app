{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/context/credits-context.jsx",
    "src/app/dashboard/layout.jsx",
    "src/app/dashboard/page.jsx",
    "src/features/search-businesses/SearchBusinessForm.jsx",
    "src/components/ui/stateSelect.jsx",
    "src/hooks/useSearchResults.js",
    "src/app/api/scrape/route.js"
  ],
  "exclude": ["node_modules"]
}
